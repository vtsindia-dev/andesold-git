<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <creditlimit>
            <general>
                <enable>1</enable>
                <enable_send_credit>0</enable_send_credit>
                <sendverify>0</sendverify>
            </general>
            <spend>
                <tax>1</tax>
                <shipping>0</shipping>
            </spend>
            <display>
                <toplink>1</toplink>
            </display>
            <email>
                <verify>creditlimit_email_verify</verify>
                <creditcode>creditlimit_email_code</creditcode>
                <notify>creditlimit_email_notify</notify>
                <sender>general</sender>
                <notify_success>creditlimit_email_notify_success</notify_success>
            </email>
            <style_management>
                <color_title>#FFFFFF</color_title>
            </style_management>
            <report>
                <mtd_start>1</mtd_start>
            </report>
        </creditlimit>
    </default>
</config>

